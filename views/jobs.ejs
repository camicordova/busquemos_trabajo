<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link href="https://fonts.googleapis.com/css2?family=Anton&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/assets/bootstrap.css">
    <script src="/assets/bootstrap.js"></script>
    <link rel='stylesheet' href='http://cdn.datatables.net/1.10.21/css/jquery.dataTables.min.css'/>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script type="text/javascript" src="http://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>
    <script src="/actions/jobs.js"></script>
  </head>
  <body>
    <div class="container py-4 px-4">
      <h1 class="row"><%= title %></h1>
      <form class="form-inline row py-3" method="POST" action="/">
        <input class="form-control col-4" type="text" placeholder="Palabra clave" aria-label="Search" name="search">
        <div class="form-group col-3">
          <select id="inputState" class="form-control fluid" name="location">
            <option selected disabled>Seleccionar una cuidad</option>
            <option value="Cualquiera">Cualquiera</option>
            <option value="San Francisco">San Francisco</option>
            <option value="New York">New York</option>
            <option value="Seattle">Seattle</option>
            <option value="Reston">Reston</option>
            <option value="Düsseldorf">Düsseldorf</option>
            <option value="India">India</option>
            <option value="España">España</option>
            <option value="Tokio">Tokio</option>
            <option value="Remote">Remote</option>
          </select>
        </div>
        <div class="form-check col-2">
          <input class="form form-check-input" type="checkbox" value="true" id="defaultCheck1" name="full_time">
          <label class="form-check-label" for="defaultCheck1">
            <span></span>
            <p>A tiempo completo</p>
          </label>
        </div> 
        <button class="btn btn-info btn-rounded btn-sm my-0 col-3" type="submit">Buscar</button>
      </form> 
      <table id="tablausuario" style="width:100%">
        <thead>
          <tr>
            <th>Tipo</th>
            <th>Ubicación</th>
            <th>Empresa</th>
            <th>Titulo</th>
            <th>Descripción</th>
            <th>Postular</th>
          </tr>
        </thead>
        <tbody>
          <% jobs.forEach(function(job){%>
            <tr>
              <td><%= job.type  %></td>
              <td><%= job.location  %></td>
              <td><%= job.company  %></td>
              <td><%= job.title  %></td>
              <td><%- job.description  %></td>
              <td><%- job.how_to_apply  %></td>
            </tr>
            <% }); %>
        </tbody>
      </table>
    </div>
  </body>
</html>
